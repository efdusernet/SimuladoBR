; PgBouncer example config (adjust DB names/paths/limits)
; Suggested location on VPS: /etc/pgbouncer/pgbouncer.ini

[databases]
; Map a logical name to a local Postgres database.
Simulados = host=127.0.0.1 port=5432 dbname=Simulados
ChatService = host=127.0.0.1 port=5432 dbname=ChatService

[pgbouncer]
listen_addr = 127.0.0.1
listen_port = 6432

; Auth
auth_type = scram-sha-256
auth_file = /etc/pgbouncer/userlist.txt

; Pooling
; For ORMs, session mode is the safest default.
pool_mode = session

; Limits (tune per VPS)
max_client_conn = 500
default_pool_size = 40
min_pool_size = 0
reserve_pool_size = 10
reserve_pool_timeout = 3

; Timeouts
server_idle_timeout = 60
query_timeout = 0

; Logs
log_connections = 1
log_disconnections = 1
